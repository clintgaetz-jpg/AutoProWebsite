@import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;500;600;700&family=Barlow:wght@400;500;600&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    font-size: 100%;
  }

  @media (max-width: 640px) {
    html {
      font-size: 110%;
    }
  }

  :root {
    --aw-color-primary: #0A0094;
    --aw-color-secondary: #001FCC;
    --aw-color-accent: #FFC836;
    --aw-color-bg-page: #ffffff;
    --aw-color-bg-page-dark: #030621;
    --aw-color-text-default: #1a1a1a;
    --aw-color-text-muted: #4b5563;
    --aw-color-text-page: #1a1a1a;
    --aw-font-sans: 'Barlow', sans-serif;
    --aw-font-heading: 'Barlow Condensed', sans-serif;
  }

  .dark {
    --aw-color-bg-page: #030621;
    --aw-color-text-default: #e5e7eb;
    --aw-color-text-muted: #9ca3af;
    --aw-color-text-page: #e5e7eb;
  }

  @media (prefers-color-scheme: dark) {
    :root:not(.light) {
      --aw-color-bg-page: #030621;
      --aw-color-text-default: #e5e7eb;
      --aw-color-text-muted: #9ca3af;
      --aw-color-text-page: #e5e7eb;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  @media (prefers-contrast: more) {
    :root {
      --aw-color-text-default: #000000;
      --aw-color-text-muted: #333333;
      --aw-color-primary: #000080;
    }
    .dark {
      --aw-color-text-default: #ffffff;
      --aw-color-text-muted: #e0e0e0;
    }
  }
}

@layer utilities {
  .bg-page {
    background-color: var(--aw-color-bg-page);
  }
  .bg-dark {
    background-color: var(--aw-color-bg-page-dark);
  }
  .bg-light {
    background-color: #ffffff;
  }
  .text-page {
    color: var(--aw-color-text-page);
  }
  .text-muted {
    color: var(--aw-color-text-muted);
  }

  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  .dark .glass {
    background: rgba(3, 6, 33, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .bg-napa-gradient {
    background: linear-gradient(135deg, #001FCC 0%, #0A0094 100%);
  }

  .shadow-soft {
    box-shadow: 0 4px 20px rgba(10, 0, 148, 0.15);
  }
  .dark .shadow-soft {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }
}

@layer components {
  .btn {
    @apply inline-flex items-center justify-center rounded-full border-gray-400 border bg-transparent font-medium text-center text-base text-page leading-snug transition py-3.5 px-6 md:px-8 ease-in duration-200 focus:ring-blue-500 focus:ring-offset-blue-200 focus:ring-2 focus:ring-offset-2 hover:bg-gray-100 hover:border-gray-600 dark:text-slate-300 dark:border-slate-500 dark:hover:bg-slate-800 dark:hover:border-slate-800 cursor-pointer;
  }
  .btn-primary {
    @apply btn font-semibold bg-primary text-white border-primary hover:bg-secondary hover:border-secondary hover:text-white dark:text-white dark:bg-primary dark:border-primary dark:hover:border-secondary dark:hover:bg-secondary;
  }
  .btn-secondary {
    @apply btn;
  }
  .btn-tertiary {
    @apply btn border-none shadow-none text-muted hover:text-gray-900 dark:text-gray-400 dark:hover:text-white;
  }
  .btn-accent {
    @apply btn font-semibold bg-[#FFC836] text-[#0A0094] border-[#FFC836] hover:bg-[#e6b430] hover:border-[#e6b430];
  }
}

/* ===========================================
   HEADER STYLES
   =========================================== */

#header {
  transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
}

/* Header at top (not scrolled) - match hero gradient */
#header:not(.scroll) {
  background: #2952e8;
}

/* Light mode: scrolled state */
#header.scroll > div:first-child {
  @apply bg-white/95 backdrop-blur-md;
  box-shadow: 0 0.375rem 1.5rem 0 rgb(140 152 164 / 13%);
}

/* Dark mode: scrolled state */
.dark #header.scroll > div:first-child,
#header.scroll.dark > div:first-child {
  @apply bg-[#030621]/95 backdrop-blur-md;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: none;
}

/* Mobile menu expanded */
#header.expanded nav {
  position: fixed;
  top: 70px;
  left: 0;
  right: 0;
  bottom: 70px !important;
  padding: 0 5px;
}

/* ===========================================
   DROPDOWN MENUS
   =========================================== */

.dropdown:focus .dropdown-menu,
.dropdown:focus-within .dropdown-menu,
.dropdown:hover .dropdown-menu {
  display: block;
}

/* ===========================================
   ICONS
   =========================================== */

[astro-icon].icon-light > * {
  stroke-width: 1.2;
}
[astro-icon].icon-bold > * {
  stroke-width: 2.4;
}

/* ===========================================
   MOBILE MENU TOGGLE ANIMATION
   =========================================== */

[data-aw-toggle-menu] path {
  @apply transition;
}
[data-aw-toggle-menu].expanded g > path:first-child {
  @apply -rotate-45 translate-y-[15px] translate-x-[-3px];
}
[data-aw-toggle-menu].expanded g > path:last-child {
  @apply rotate-45 translate-y-[-8px] translate-x-[14px];
}

/* ===========================================
   CONTENT STYLES
   =========================================== */

.dd *:first-child {
  margin-top: 0;
}