---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Our Team',
  description: 'Meet the team at Sylvan Lake AUTOPRO. Red Seal certified technicians and staff committed to uncompromising customer service since 2006.',
};

// Team data
const owners = [
  {
    name: 'Wolfgang Kukowski',
    role: 'Co-Owner',
    bio: '[Bio coming soon]',
    photo: null,
  },
  {
    name: 'Clint Gaetz',
    role: 'Co-Owner',
    bio: '[Bio coming soon]',
    photo: null,
  },
  {
    name: 'Alaina Gaetz',
    role: 'Co-Owner',
    bio: '[Bio coming soon]',
    photo: null,
  },
];

const frontOffice = [
  {
    name: 'Michelle Meade',
    role: 'Service Advisor',
    photo: null,
  },
  {
    name: 'Paige McLeod',
    role: 'Service Advisor',
    photo: null,
  },
  {
    name: 'Niah Bayliss',
    role: 'Scheduling & Office Manager',
    photo: null,
  },
];

const technicians = [
  {
    name: 'Josh Lane',
    role: 'Licensed Technician',
    photo: null,
  },
  {
    name: 'Nathan Marthaller',
    role: 'Apprentice Technician',
    photo: null,
  },
  {
    name: 'Josh Linton',
    role: 'Apprentice Technician',
    photo: null,
  },
];
---

<Layout metadata={metadata}>

  <!-- Hero Section -->
  <Hero2
    tagline="Our People"
    title="Meet the Team"
    subtitle="The people behind 19 years of uncompromising customer service."
    actions={[
      { variant: 'primary', text: 'Book Appointment', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />

  <!-- Owners Section -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-4 md:px-6">
      <div class="text-center mb-10 md:mb-12">
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 font-heading dark:text-white">Owners</h2>
        <p class="text-lg text-muted dark:text-slate-400">Same ownership since 2006</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        {owners.map((owner) => (
          <div class="bg-white dark:bg-slate-900 rounded-xl shadow-lg overflow-hidden">
            <!-- Photo placeholder -->
            <div class="aspect-square bg-gray-200 dark:bg-slate-700 flex items-center justify-center">
              {owner.photo ? (
                <img src={owner.photo} alt={owner.name} class="w-full h-full object-cover" />
              ) : (
                <div class="text-center p-4">
                  <svg class="w-20 h-20 mx-auto text-gray-400 dark:text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <p class="text-xs text-gray-400 dark:text-slate-500 mt-2">Photo coming soon</p>
                </div>
              )}
            </div>
            <!-- Info -->
            <div class="p-6 text-center">
              <h3 class="text-xl font-bold mb-1 dark:text-white">{owner.name}</h3>
              <p class="text-primary dark:text-blue-400 font-medium mb-3">{owner.role}</p>
              {owner.bio && owner.bio !== '[Bio coming soon]' ? (
                <p class="text-muted dark:text-slate-400 text-sm">{owner.bio}</p>
              ) : (
                <p class="text-gray-400 dark:text-slate-500 text-sm italic">{owner.bio}</p>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technicians Section -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-6xl mx-auto px-4 md:px-6">
      <div class="text-center mb-10 md:mb-12">
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 font-heading dark:text-white">Our Technicians</h2>
        <p class="text-lg text-muted dark:text-slate-400">The skilled hands that keep your vehicles running right.</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {technicians.map((tech) => (
          <div class="bg-white dark:bg-slate-900 rounded-xl shadow-lg overflow-hidden">
            <!-- Photo placeholder -->
            <div class="aspect-square bg-gray-200 dark:bg-slate-700 flex items-center justify-center">
              {tech.photo ? (
                <img src={tech.photo} alt={tech.name} class="w-full h-full object-cover" />
              ) : (
                <div class="text-center p-4">
                  <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <p class="text-xs text-gray-400 dark:text-slate-500 mt-2">Photo coming soon</p>
                </div>
              )}
            </div>
            <!-- Info -->
            <div class="p-4 text-center">
              <h3 class="text-lg font-bold mb-1 dark:text-white">{tech.name}</h3>
              <p class="text-primary dark:text-blue-400 font-medium text-sm">{tech.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Front Office Section -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-4 md:px-6">
      <div class="text-center mb-10 md:mb-12">
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 font-heading dark:text-white">Front Office</h2>
        <p class="text-lg text-muted dark:text-slate-400">Your first point of contact</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {frontOffice.map((member) => (
          <div class="bg-white dark:bg-slate-900 rounded-xl shadow-lg overflow-hidden">
            <!-- Photo placeholder -->
            <div class="aspect-square bg-gray-200 dark:bg-slate-700 flex items-center justify-center">
              {member.photo ? (
                <img src={member.photo} alt={member.name} class="w-full h-full object-cover" />
              ) : (
                <div class="text-center p-4">
                  <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <p class="text-xs text-gray-400 dark:text-slate-500 mt-2">Photo coming soon</p>
                </div>
              )}
            </div>
            <!-- Info -->
            <div class="p-4 text-center">
              <h3 class="text-lg font-bold mb-1 dark:text-white">{member.name}</h3>
              <p class="text-primary dark:text-blue-400 font-medium text-sm">{member.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Shop Mascot Section -->
  <section class="py-8 md:py-12">
    <div class="max-w-md mx-auto px-4 md:px-6 text-center">
      <div class="bg-amber-50 dark:bg-amber-900/20 rounded-2xl p-6 border-2 border-amber-200 dark:border-amber-700">
        <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-amber-100 dark:bg-amber-800/50 flex items-center justify-center">
          <svg class="w-12 h-12 text-amber-600 dark:text-amber-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18 4c-1 0-2 .5-2.5 1L12 8.5 8.5 5C8 4.5 7 4 6 4 3.5 4 2 6.5 2 9c0 3 2 5 4 7l6 5 6-5c2-2 4-4 4-7 0-2.5-1.5-5-4-5z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-1 text-amber-900 dark:text-amber-100">Lucy</h3>
        <p class="text-amber-700 dark:text-amber-300 font-medium">Shop Dog</p>
        <p class="text-amber-600 dark:text-amber-400 text-sm mt-2 italic">Official greeter and morale officer</p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction
    title="Ready to Meet Us in Person?"
    subtitle="Stop by the shop or give us a call. We're always happy to chat."
    actions={[
      { variant: 'primary', text: 'Book Appointment', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />

  <!-- Address Footer -->
  <section class="py-8 text-center">
    <div class="max-w-4xl mx-auto px-4">
      <p class="text-lg font-semibold text-gray-900 dark:text-white">Sylvan Lake AUTOPRO Inc</p>
      <p class="text-muted dark:text-slate-400">1A Industrial Dr, Sylvan Lake, AB T4S 1P4</p>
      <div class="mt-4 flex justify-center gap-4">
        <a href="/about" class="text-primary dark:text-blue-400 hover:underline">About Us</a>
        <span class="text-gray-300 dark:text-gray-600">|</span>
        <a href="/contact" class="text-primary dark:text-blue-400 hover:underline">Contact</a>
        <span class="text-gray-300 dark:text-gray-600">|</span>
        <a href="/services" class="text-primary dark:text-blue-400 hover:underline">Services</a>
      </div>
    </div>
  </section>
</Layout>
