---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: '404 - Page Not Found',
  description: 'Oops! This page seems to have wandered off. Let us help you find what you need.',
  robots: {
    index: false,
    follow: false,
  },
};
---

<Layout metadata={metadata}>
  <section class="bg-dark min-h-[70vh] flex items-center justify-center py-12 md:py-16">
    <div class="max-w-2xl mx-auto px-4 text-center">

      <!-- Lucy -->
      <div class="mb-8">
        <img
          src="/images/lucy404.jpg"
          alt="Lucy the shop dog, rolling around looking confused"
          class="mx-auto w-48 md:w-64 rounded-2xl"
          width="348"
          height="574"
          loading="eager"
        />
      </div>

      <!-- Content -->
      <p class="text-[#FFC836] font-semibold text-sm uppercase tracking-wider mb-3">
        404 â€” Page Not Found
      </p>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 font-heading">
        Even Lucy can't find this page.
      </h1>
      <p class="text-gray-300 text-lg mb-8 max-w-lg mx-auto">
        The page you're looking for may have moved or no longer exists.
        Let's get you back on track.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-flex items-center justify-center gap-2 min-h-[48px] px-6 py-3 rounded-lg bg-[#FFC836] text-[#0A0094] font-semibold hover:bg-yellow-300 transition-colors"
        >
          <Icon name="tabler:home" class="w-5 h-5" />
          Back to Home
        </a>
        <a
          href="/services"
          class="inline-flex items-center justify-center gap-2 min-h-[48px] px-6 py-3 rounded-lg border-2 border-gray-500 text-white font-semibold hover:border-white transition-colors"
        >
          <Icon name="tabler:tools" class="w-5 h-5" />
          View Our Services
        </a>
        <a
          href="tel:+14038870440"
          class="inline-flex items-center justify-center gap-2 min-h-[48px] px-6 py-3 rounded-lg border-2 border-gray-500 text-white font-semibold hover:border-white transition-colors"
        >
          <Icon name="tabler:phone" class="w-5 h-5" />
          Call Us
        </a>
      </div>

    </div>
  </section>
</Layout>
