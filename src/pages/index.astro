---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import StatsMobile from '~/components/widgets/StatsMobile.astro';
import Steps from '~/components/widgets/Steps.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Sylvan Lake AUTOPRO | Trusted Auto Repair Since 2006',
  description: 'Trusted auto repair in Sylvan Lake since 2006. Oil changes, brakes, inspections, diagnostics. 4.9★ rating, NAPA warranty. Call (403) 887-0440.',
  ignoreTitleTemplate: true,
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "AutoRepair",
  "name": "Sylvan Lake AUTOPRO",
  "image": "https://sylvanlakeautopro.com/images/og-image.jpg",
  "logo": "https://sylvanlakeautopro.com/images/autopro-logo.png",
  "@id": "https://sylvanlakeautopro.com/#organization",
  "url": "https://sylvanlakeautopro.com",
  "telephone": "+1-403-887-0440",
  "email": "service@sylvanlakeautopro.com",
  "priceRange": "$",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1A Industrial Dr",
    "addressLocality": "Sylvan Lake",
    "addressRegion": "AB",
    "postalCode": "T4S 1P4",
    "addressCountry": "CA"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 52.311676,
    "longitude": -114.073863
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "290",
    "bestRating": "5",
    "worstRating": "1"
  },
  "areaServed": [
    "Sylvan Lake",
    "Red Deer",
    "Rocky Mountain House",
    "Rimbey",
    "Ponoka",
    "Blackfalds",
    "Penhold",
    "Eckville",
    "Bentley",
    "Benalto",
    "Condor",
    "Leslieville",
    "Alhambra",
    "Withrow",
    "Evarts",
    "Dickson",
    "Markerville",
    "Caroline",
    "Bluffton",
    "Hoadley",
    "Jarvis Bay",
    "Norglenwold",
    "Gull Lake",
    "Birchcliff"
  ],
  "sameAs": [
    "https://www.facebook.com/SylvanLakeAutopro/",
    "https://g.page/sylvan-lake-autopro"
  ]
};
---

<Layout metadata={metadata}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  </Fragment>

  <!-- Hero -->
  <Hero
    actions={[
      {
        variant: 'accent',
        text: 'Call (403) 887-0440',
        href: 'tel:4038870440',
        icon: 'tabler:phone',
      },
      {
        variant: 'accent',
        text: 'Text Us',
        href: 'sms:+14038870440',
        icon: 'tabler:message',
      },
      {
        variant: 'accent',
        text: 'Book Appointment',
        href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      Your Trusted <span class="text-accent">Auto Repair</span> Shop in Sylvan Lake
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">Locally owned since 2006.</span> Licensed technicians,
      NAPA Peace of Mind warranty, and service that treats you like a neighbour—because you are one.
    </Fragment>
  </Hero>

  <!-- Mobile-only Stats (desktop stats are in Hero) -->
  <StatsMobile />

  <!-- Services -->
  <Features
    id="services"
    tagline="What We Do"
    title="Full-Service Auto Repair & Inspections"
    subtitle="From routine maintenance to complex diagnostics—we keep Sylvan Lake moving."
    items={[
      {
        title: 'Out of Province Inspections',
        description: 'Bringing a vehicle into Alberta? We handle the mandatory OOP inspection so you can get registered fast.',
        icon: 'tabler:clipboard-check',
        href: '/services/out-of-province-inspection',
      },
      {
        title: 'Commercial Vehicle Inspections (CVIP)',
        description: 'Certified CVIP facility for trucks, trailers, and commercial fleets. Stay compliant, stay on the road.',
        icon: 'tabler:truck',
        href: '/services/cvip-inspection',
      },
      {
        title: 'Brakes & Suspension',
        description: 'Squealing, grinding, or pulling? We diagnose and fix brake and suspension issues with quality NAPA parts.',
        icon: 'tabler:disc',
        href: '/services/brake-repair',
      },
      {
        title: 'Engine Diagnostics',
        description: 'Check engine light on? Our scan tools and experience pinpoint the problem—no guesswork.',
        icon: 'tabler:engine',
        href: '/services/diagnostics',
      },
      {
        title: 'Oil Changes & Maintenance',
        description: 'Quick, thorough oil changes and factory-scheduled maintenance to keep your warranty intact.',
        icon: 'tabler:droplet',
        href: '/services/oil-change',
      },
      {
        title: 'A/C & Heating',
        description: 'Alberta summers and winters demand working climate control. We service and repair all systems.',
        icon: 'tabler:temperature',
        href: '/services/ac-service-repair',
      },
    ]}
  />

  <!-- Why Choose Us -->
  <Steps
    title="Why Sylvan Lake Chooses Us"
    items={[
      {
        title: '<span class="font-medium">Local & Independent</span>',
        description: 'Owned and operated right here since 2006. We know this community because we live in it.',
        icon: 'tabler:home',
      },
      {
        title: '<span class="font-medium">NAPA Peace of Mind Warranty</span>',
        description: '24 months / 40,000 km nationwide warranty on qualifying repairs. Drive anywhere with confidence.',
        icon: 'tabler:shield-check',
      },
      {
        title: '<span class="font-medium">Licensed Technicians</span>',
        description: 'Our mechanics are provincially licensed and trained to work on all makes and models.',
        icon: 'tabler:certificate',
      },
      {
        title: '<span class="font-medium">Comfortable Waiting Room</span>',
        description: "Free Wi-Fi, TV, coffee, and snacks. Or use our local shuttle—we will get you where you need to be.",
        icon: 'tabler:armchair',
      },
    ]}
  />

  <!-- FAQs -->
  <FAQs
    title="Common Questions"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do I need an appointment?',
        description: "Appointments are recommended but not always required. Call us at (403) 887-0440 or book online. Walk-ins welcome when capacity allows.",
      },
      {
        title: 'What is included in the NAPA warranty?',
        description: "Qualifying repairs are covered for 24 months or 40,000 km—whichever comes first—at any NAPA AUTOPRO location across Canada and the US.",
      },
      {
        title: 'Do you offer financing?',
        description: 'Yes. We partner with Flexiti and AutologiQ to offer flexible payment options for larger repairs.',
      },
      {
        title: 'Can you do my Out of Province inspection?',
        description: "Absolutely. We are a licensed OOP inspection facility. Bring your out-of-province vehicle and we will handle the Alberta requirements.",
      },
      {
        title: 'Do you work on diesels and trucks?',
        description: 'Yes. We service gas and diesel vehicles including light trucks. For heavy commercial vehicles, we offer CVIP inspections.',
      },
      {
        title: 'Is there a shuttle service?',
        description: 'Yes—free local shuttle within Sylvan Lake. We also have loaner vehicles available for longer repairs (subject to availability).',
      },
    ]}
  />

  <!-- Call to Action -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center p-6 md:p-12 rounded-2xl bg-[#0A0094] shadow-xl">
        <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold tracking-tighter mb-4 font-heading text-white">
          Ready to Book Your Service?
        </h2>
        <p class="text-base md:text-xl text-gray-200 mb-6 md:mb-8">
          Call us or book online. We take care of your vehicle like it's our own.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-3 md:gap-4">
          <a
            href="tel:+14038870440"
            class="inline-flex items-center justify-center min-h-[48px] px-6 py-3 rounded-full font-semibold
                   bg-[#FFC836] border-2 border-[#FFC836] text-[#0A0094]
                   hover:bg-[#e6b430] hover:border-[#e6b430] transition-colors"
          >
            Call (403) 887-0440
          </a>
          <!-- Text button - mobile only -->
          <a
            href="sms:+14038870440"
            class="sm:hidden inline-flex items-center justify-center min-h-[48px] px-6 py-3 rounded-full font-semibold
                   bg-[#FFC836] border-2 border-[#FFC836] text-[#0A0094]
                   hover:bg-[#e6b430] hover:border-[#e6b430] transition-colors"
          >
            Text Us
          </a>
          <a
            href="https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center min-h-[48px] px-6 py-3 rounded-full font-semibold
                   bg-transparent border-2 border-white text-white
                   hover:bg-white hover:text-[#0A0094] transition-colors"
          >
            Book Online
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>