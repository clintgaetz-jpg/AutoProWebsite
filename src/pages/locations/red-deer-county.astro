---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Auto Repair Red Deer County',
  description: 'Trusted auto repair for Red Deer County acreage and rural residents. Full-service shop in Sylvan Lake — 19 years serving central Alberta. Licensed inspections, brakes, oil changes & more.',
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "AutoRepair",
  "name": "Sylvan Lake AUTOPRO",
  "image": "https://sylvanlakeautopro.com/images/og-image.jpg",
  "@id": "https://sylvanlakeautopro.com/#organization",
  "url": "https://sylvanlakeautopro.com",
  "telephone": "+1-403-887-0440",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1A Industrial Dr",
    "addressLocality": "Sylvan Lake",
    "addressRegion": "AB",
    "postalCode": "T4S 1P4",
    "addressCountry": "CA"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 52.311676,
    "longitude": -114.073863
  },
  "areaServed": ["Red Deer County", "Benalto", "Springbrook", "Markerville", "Dickson", "Spruce View", "Penhold", "Gasoline Alley"]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How far is Sylvan Lake AUTOPRO from Red Deer County communities?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We're centrally located on Highway 11 in Sylvan Lake. Most Red Deer County residents can reach us within 20–35 minutes. Benalto is about 18 minutes west on Highway 11, Springbrook is about 20 minutes via Highway 2A, and Penhold is about 22 minutes north."
      }
    },
    {
      "@type": "Question",
      "name": "Do you work on farm trucks and equipment vehicles?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We work on all light-duty and medium-duty vehicles including trucks, SUVs, and vans. For heavy-duty farm equipment, you'd need a specialized agricultural dealer, but for your pickup trucks, service vehicles, and daily drivers, we've got you covered."
      }
    },
    {
      "@type": "Question",
      "name": "Can I drop my vehicle off early and pick it up later?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely. We have an after-hours key drop, so you can drop your vehicle off before we open and pick it up when it's convenient. We also offer shuttle service within the Sylvan Lake area."
      }
    },
    {
      "@type": "Question",
      "name": "Do gravel roads really affect my vehicle that much?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Gravel road driving accelerates wear on suspension components, brakes, wheel bearings, and undercarriage protection. Dust infiltrates filters and can affect engine performance. We recommend more frequent inspections for vehicles that regularly travel gravel roads — typically every 8,000–10,000 km rather than the standard 12,000 km interval."
      }
    },
    {
      "@type": "Question",
      "name": "Are you open on Saturdays?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Check our current hours on our contact page or call (403) 887-0440."
      }
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://sylvanlakeautopro.com/" },
    { "@type": "ListItem", "position": 2, "name": "Locations", "item": "https://sylvanlakeautopro.com/locations/" },
    { "@type": "ListItem", "position": 3, "name": "Red Deer County" }
  ]
};
---

<Layout metadata={metadata}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    tagline="Serving Red Deer County"
    title="Auto Repair for Red Deer County Residents"
    subtitle="Sylvan Lake AUTOPRO has been the go-to shop for Red Deer County residents since 2006. Whether you're on an acreage off a range road or in one of the County's hamlets, we're centrally located on Highway 11 in Sylvan Lake — easy to get to from anywhere in the County."
    actions={[
      { variant: 'primary', text: 'Book Online', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />

  <!-- Gravel Roads Section -->
  <Content
    title="Your Vehicle Works Harder Out Here"
    content="Red Deer County covers over 4,000 square kilometres of central Alberta, and the County maintains more than 3,000 kilometres of roads — many of them gravel. That gravel takes a toll on your vehicle in ways city driving simply doesn't.<br/><br/>Loose stone chips away at paint and undercarriage coatings. Dust works its way into engine air filters, cabin filters, and brake components. The constant vibration from washboard roads accelerates wear on suspension bushings, ball joints, tie rod ends, and wheel bearings. And in winter, the combination of gravel, sand, salt, and freeze-thaw cycles creates conditions that are genuinely hard on vehicles.<br/><br/>If you live on an acreage or in one of the County's rural subdivisions, your vehicle needs a mechanic who understands these conditions — not a quick-lube chain designed for city commuters.<br/><br/>At Sylvan Lake AUTOPRO, we see vehicles from across the County every day. We know what gravel road driving does to your suspension, your brakes, and your undercarriage, and we inspect for it every time your vehicle is in our shop."
  />

  <!-- Distance Table Section -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-4xl mx-auto px-4 md:px-6">
      <div class="text-center mb-8 md:mb-12">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold font-heading dark:text-white">Convenient for Communities Across the County</h2>
        <p class="text-lg text-muted dark:text-slate-400 mt-4">Sylvan Lake sits right in the heart of Red Deer County, making us easy to reach from communities throughout the area.</p>
      </div>

      <div class="bg-white dark:bg-slate-900 rounded-xl shadow-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-primary text-white">
            <tr>
              <th class="px-4 py-3 text-left font-semibold">Community</th>
              <th class="px-4 py-3 text-left font-semibold">Distance</th>
              <th class="px-4 py-3 text-left font-semibold">Drive Time</th>
              <th class="px-4 py-3 text-left font-semibold hidden sm:table-cell">Route</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-slate-700">
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Benalto</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">18 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~18 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">West on Highway 11</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Springbrook</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">25 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~20 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">South via Highway 2A & 11</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Markerville</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">22 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~20 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">South on Hwy 781 to Hwy 11</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Dickson</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">30 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~25 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">South on Range Road 31 to Hwy 11</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Spruce View</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">50 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~35 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">South on Hwy 54 to Hwy 2A to Hwy 11</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Penhold</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">30 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~22 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">North on Hwy 2A to Hwy 11</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800">
              <td class="px-4 py-3 font-medium dark:text-white">Gasoline Alley</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">28 km</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400">~20 min</td>
              <td class="px-4 py-3 text-muted dark:text-slate-400 hidden sm:table-cell">West on Highway 11</td>
            </tr>
          </tbody>
        </table>
      </div>

      <p class="mt-6 text-center text-muted dark:text-slate-400">
        We're located at <strong class="text-gray-900 dark:text-white">1A Industrial Drive, Sylvan Lake</strong> — right off Highway 11 on the east side of town, in the industrial area. Easy to find, plenty of parking for trucks and trailers.
      </p>
    </div>
  </section>

  <!-- Services Section -->
  <Features2
    title="Services Red Deer County Residents Use Most"
    columns={2}
    items={[
      {
        title: 'Suspension & Steering Repair',
        description: 'Gravel roads are hard on suspension components. We see worn ball joints, tie rod ends, and shock absorbers regularly from County residents. Our Hunter HawkEye Elite alignment system catches problems early — before they cost you tires.',
        icon: 'tabler:steering-wheel',
        callToAction: { text: 'Learn More', href: '/services/steering-suspension' },
      },
      {
        title: 'Out of Province Inspections',
        description: "Red Deer County sees a lot of vehicle movement — people buying trucks from BC or Saskatchewan, or bringing vehicles from out east. We're a licensed AMVIC inspection facility and one of the few shops in the area that handles out-of-province inspections efficiently.",
        icon: 'tabler:clipboard-check',
        callToAction: { text: 'Learn More', href: '/services/out-of-province-inspection' },
      },
      {
        title: 'Commercial Vehicle Inspections (CVIP)',
        description: "The County's economy runs on agriculture, oil and gas, and construction. If you operate commercial vehicles, we perform CVIP inspections to keep your fleet compliant and on the road.",
