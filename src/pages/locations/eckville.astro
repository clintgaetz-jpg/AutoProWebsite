const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How long is the drive from Eckville to your shop?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "About 20 minutes. Head south on Highway 766 to Highway 11, then east to Sylvan Lake. We're at 1A Industrial Drive, on the east side of town right off the highway."
