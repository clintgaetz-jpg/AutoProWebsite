---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Auto Repair Services | Sylvan Lake AUTOPRO',
  description: 'Full-service auto repair in Sylvan Lake. Oil changes, brakes, inspections, diagnostics, tires, and more. NAPA warranty. Call (403) 887-0440.',
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "AutoRepair",
  "name": "Sylvan Lake AUTOPRO",
  "@id": "https://sylvanlakeautopro.com/#organization",
  "url": "https://sylvanlakeautopro.com/services",
  "telephone": "+1-403-887-0440",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1A Industrial Dr",
    "addressLocality": "Sylvan Lake",
    "addressRegion": "AB",
    "postalCode": "T4S 1P4",
    "addressCountry": "CA"
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://sylvanlakeautopro.com/" },
    { "@type": "ListItem", "position": 2, "name": "Services" }
  ]
};

const serviceCategories = [
  {
    title: 'Maintenance',
    icon: 'wrench',
    services: [
      { name: 'Oil Change Services', href: '/services/oil-change' },
      { name: 'Steering & Suspension', href: '/services/steering-suspension' },
      { name: 'Electrical System Service', href: '/services/electrical' },
    ],
  },
  {
    title: 'Brakes & Safety',
    icon: 'disc',
    services: [
      { name: 'Brake Repair', href: '/services/brake-repair' },
      { name: 'Brake Inspection', href: '/services/brake-inspection' },
    ],
  },
  {
    title: 'Diagnostics',
    icon: 'engine',
    services: [
      { name: 'Check Engine Light Diagnostics', href: '/services/diagnostics' },
      { name: 'Starting & Charging', href: '/services/electrical' },
    ],
  },
  {
    title: 'Climate & Comfort',
    icon: 'temperature',
    services: [
      { name: 'A/C Service & Repair', href: '/services/ac-service-repair' },
      { name: 'Cooling System Service', href: '/services/fluid-maintenance' },
    ],
  },
  {
    title: 'Wheels & Tires',
    icon: 'wheel',
    services: [
      { name: 'Wheel Alignment', href: '/services/alignment' },
      { name: 'Tire Sales & Service', href: '/services/tires' },
      { name: 'Wheel Balancing & Rotation', href: '/services/tires' },
      { name: 'TPMS Service', href: '/services/tires' },
    ],
  },
  {
    title: 'Inspections',
    icon: 'clipboard',
    services: [
      { name: 'Out of Province Inspection', href: '/services/out-of-province-inspection' },
      { name: 'Commercial Vehicle Inspection (CVIP)', href: '/services/cvip-inspection' },
      { name: 'Pre-Purchase Inspection', href: '/services/pre-purchase-inspection' },
    ],
  },
  {
    title: 'Specialty Services',
    icon: 'star',
    services: [
      { name: 'Automotive Keys', href: '/services/automotive-keys' },
      { name: 'Fleet Services', href: '/services/fleet-services' },
      { name: 'Hybrid & Electric Vehicle Service', href: '/services/hybrid-ev-service' },
    ],
  },
];

