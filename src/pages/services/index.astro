---

<Layout metadata={metadata}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    tagline="Full-Service Auto Repair"
    title="Our Services"
    subtitle="From routine oil changes to complex diagnostics, we keep Sylvan Lake moving. All repairs backed by our NAPA Peace of Mind warranty."
    actions={[
      { variant: 'primary', text: 'Book Appointment', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />

  <!-- Service Categories -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-4 md:px-6">

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {serviceCategories.map((category) => (
          <div class="bg-white dark:bg-slate-900 rounded-xl shadow-lg border border-gray-100 dark:border-slate-800 border-l-4 border-l-primary overflow-hidden">
            <div class="p-6">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-[#FFC836]/20 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-[#FFC836]" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d={icons[category.icon]} />
                  </svg>
                </div>
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">{category.title}</h2>
              </div>
              <ul class="space-y-2">
                {category.services.map((service) => (
                  <li>
                    <a
                      href={service.href}
                      class="flex items-center text-muted dark:text-slate-400 hover:text-primary dark:hover:text-blue-400 transition-colors group"
                    >
                      <svg class="w-4 h-4 mr-2 text-gray-400 group-hover:text-primary dark:group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                      </svg>
                      {service.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>

    </div>
  </section>

  <!-- Additional Info -->
  <section class="py-12 md:py-16 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-4xl mx-auto px-4 md:px-6 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4 dark:text-white">Don't See What You Need?</h2>
      <p class="text-lg text-muted dark:text-slate-400 mb-6">
        We work on most makes and models. If you have a question about a specific repair or service, give us a call. We'll let you know if we can help or point you in the right direction.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="tel:+14038870440"
          class="inline-flex items-center justify-center px-6 py-3 rounded-full font-semibold bg-primary text-white hover:bg-primary/90 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call (403) 887-0440
        </a>
        <a
          href="sms:+14038870440"
          class="inline-flex items-center justify-center px-6 py-3 rounded-full font-semibold border-2 border-primary text-primary dark:text-blue-400 hover:bg-primary hover:text-white transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          Text Us
        </a>
      </div>
    </div>
  </section>

  <!-- NAPA Warranty Banner -->
  <section class="py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-4 md:px-6">
      <div class="bg-gradient-to-r from-primary to-secondary rounded-2xl p-8 md:p-12 text-center text-white">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">NAPA Peace of Mind Warranty</h2>
        <p class="text-lg text-white/90 mb-2">24 months / 40,000 km nationwide coverage on qualifying repairs.</p>
        <p class="text-white/80">Honored at NAPA AUTOPRO locations across Canada and the US.</p>
        <a href="/warranty" class="inline-flex items-center mt-6 text-white font-semibold hover:underline">
          Learn more about our warranty
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction
    title="Ready to Book?"
    subtitle="Schedule your appointment online or give us a call."
    actions={[
      { variant: 'primary', text: 'Book Online', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />
</Layout>
