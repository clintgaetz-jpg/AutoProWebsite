---
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import DirectionsButtons from '~/components/ui/DirectionsButtons.astro';

const metadata = {
  title: 'Contact Us | Sylvan Lake AUTOPRO',
  description: 'Contact Sylvan Lake AUTOPRO. Call (403) 887-0440, text us, email service@sylvanlakeautopro.com, or book online. Located at 1A Industrial Dr, Sylvan Lake, AB.',
};

const contactSchema = {
  "@context": "https://schema.org",
  "@type": "AutoRepair",
  "name": "Sylvan Lake AUTOPRO",
  "image": "https://sylvanlakeautopro.com/images/og-image.jpg",
  "url": "https://sylvanlakeautopro.com",
  "logo": "https://sylvanlakeautopro.com/images/autopro-logo.png",
  "telephone": "+1-403-887-0440",
  "email": "service@sylvanlakeautopro.com",
  "priceRange": "$",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1A Industrial Dr",
    "addressLocality": "Sylvan Lake",
    "addressRegion": "AB",
    "postalCode": "T4S 1P4",
    "addressCountry": "CA"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 52.311676,
    "longitude": -114.073863
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "290",
    "bestRating": "5",
    "worstRating": "1"
  },
  "areaServed": [
    "Sylvan Lake",
    "Red Deer",
    "Rocky Mountain House",
    "Rimbey",
    "Ponoka",
    "Blackfalds",
    "Penhold",
    "Eckville",
    "Bentley",
    "Benalto",
    "Condor",
    "Leslieville",
    "Alhambra",
    "Withrow",
    "Evarts",
    "Dickson",
    "Markerville",
    "Caroline",
    "Bluffton",
    "Hoadley",
    "Jarvis Bay",
    "Norglenwold",
    "Gull Lake",
    "Birchcliff"
  ],
  "sameAs": [
    "https://www.facebook.com/SylvanLakeAutopro/",
    "https://g.page/sylvan-lake-autopro"
  ]
};
---

<Layout metadata={metadata}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(contactSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="pt-6 pb-4 md:pt-8 md:pb-6">
    <div class="max-w-4xl mx-auto px-4 md:px-6 text-center">
      <h1 class="text-2xl md:text-3xl font-bold mb-1 font-heading text-gray-900 dark:text-white">Contact Us</h1>
      <p class="text-muted dark:text-slate-400">Questions? Ready to book? Reach out however works best.</p>
    </div>
  </section>

  <!-- Broken Down Banner -->
  <section class="py-3 bg-red-600">
    <a href="/breakdown" class="block max-w-5xl mx-auto px-4 md:px-6">
      <div class="flex items-center justify-center gap-3 text-white">
        <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <span class="font-semibold">Broken down? Here's what to do →</span>
      </div>
    </a>
  </section>

  <!-- Contact Options -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-5xl mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">

        <!-- Call -->
        <a href="tel:+14038870440" class="group bg-white dark:bg-slate-900 rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 mx-auto mb-4 bg-primary/10 dark:bg-blue-900/30 rounded-full flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <svg class="w-8 h-8 text-primary dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h2 class="text-xl md:text-2xl font-bold mb-2 font-heading dark:text-white">Call Us</h2>
          <p class="text-2xl md:text-3xl font-bold text-primary dark:text-blue-400">(403) 887-0440</p>
          <p class="text-sm text-muted dark:text-slate-400 mt-2">Mon–Fri 8am–5pm</p>
        </a>

        <!-- Text -->
        <a href="sms:+14038870440" class="group bg-white dark:bg-slate-900 rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 mx-auto mb-4 bg-primary/10 dark:bg-blue-900/30 rounded-full flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <svg class="w-8 h-8 text-primary dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h2 class="text-xl md:text-2xl font-bold mb-2 font-heading dark:text-white">Text Us</h2>
          <p class="text-2xl md:text-3xl font-bold text-primary dark:text-blue-400">(403) 887-0440</p>
          <p class="text-sm text-muted dark:text-slate-400 mt-2">We'll respond as soon as we can</p>
        </a>

        <!-- Email -->
        <a href="mailto:service@sylvanlakeautopro.com" class="group bg-white dark:bg-slate-900 rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 mx-auto mb-4 bg-primary/10 dark:bg-blue-900/30 rounded-full flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <svg class="w-8 h-8 text-primary dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h2 class="text-xl md:text-2xl font-bold mb-2 font-heading dark:text-white">Email Us</h2>
          <p class="text-lg md:text-xl font-bold text-primary dark:text-blue-400 break-all">service@sylvanlakeautopro.com</p>
          <p class="text-sm text-muted dark:text-slate-400 mt-2">We check email throughout the day</p>
        </a>

        <!-- Book Online -->
        <a href="https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1" target="_blank" rel="noopener noreferrer" class="group bg-white dark:bg-slate-900 rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 mx-auto mb-4 bg-[#FFC836]/20 rounded-full flex items-center justify-center group-hover:bg-[#FFC836]/30 transition-colors">
            <svg class="w-8 h-8 text-[#0A0094] dark:text-[#FFC836]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h2 class="text-xl md:text-2xl font-bold mb-2 font-heading dark:text-white">Book Online</h2>
          <p class="text-lg md:text-xl font-bold text-primary dark:text-blue-400">Schedule an Appointment</p>
          <p class="text-sm text-muted dark:text-slate-400 mt-2">Pick a time that works for you</p>
        </a>

      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-4xl mx-auto px-4 md:px-6 text-center">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 md:mb-6 font-heading dark:text-white">Find Us</h2>
      <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-2 mb-8">
        <p class="font-bold text-gray-900 dark:text-white text-xl">Sylvan Lake AUTOPRO</p>
        <p>1A Industrial Dr</p>
        <p>Sylvan Lake, AB T4S 1P4</p>
      </div>

      <!-- Map embed -->
      <div class="rounded-xl overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2439.238396514467!2d-114.07386352333153!3d52.311676472007356!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5375b2a4aa1e9033%3A0x95df6cc6d088af4b!2sNAPA%20AUTOPRO%20-%20Sylvan%20Lake%20AUTOPRO%20Inc!5e0!3m2!1sen!2sca!4v1769914087968!5m2!1sen!2sca"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Sylvan Lake AUTOPRO Location"
          class="w-full"
        ></iframe>
      </div>

      <div class="mt-8">
        <DirectionsButtons />
      </div>
    </div>
  </section>

  <!-- Service Area Section -->
  <section id="service-area" class="py-8 md:py-12">
    <div class="max-w-4xl mx-auto px-4 md:px-6 text-center">
      <h3 class="text-lg md:text-xl font-semibold mb-3 text-gray-700 dark:text-gray-300">Serving West-Central Alberta</h3>
      <p class="text-sm text-muted dark:text-slate-500 leading-relaxed">
        Sylvan Lake • Red Deer • Rocky Mountain House • Rimbey • Ponoka • Blackfalds • Penhold • Eckville • Bentley • Benalto • Condor • Leslieville • Alhambra • Withrow • Evarts • Dickson • Markerville • Caroline • Bluffton • Hoadley • Jarvis Bay • Norglenwold • Gull Lake • Birchcliff
      </p>
    </div>
  </section>

  <!-- Making It Easy Callout -->
  <section class="py-8 md:py-12">
    <div class="max-w-4xl mx-auto px-4 md:px-6">
      <a href="/making-it-easy" class="block bg-primary/5 dark:bg-blue-900/20 border border-primary/20 dark:border-blue-800 rounded-xl p-6 hover:bg-primary/10 dark:hover:bg-blue-900/30 transition-colors">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-primary dark:text-blue-400 mb-1">Making It Easy</h3>
            <p class="text-muted dark:text-slate-400">Shuttle service, loaner vehicles, flexible payment, online booking, and more.</p>
          </div>
          <svg class="w-6 h-6 text-primary dark:text-blue-400 flex-shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </a>
    </div>
  </section>

  <!-- Hours Section -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-4xl mx-auto px-4 md:px-6 text-center">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-6 md:mb-8 font-heading dark:text-white">Hours</h2>
      <div class="inline-block text-left">
        <div class="grid grid-cols-2 gap-x-8 gap-y-2 text-base md:text-lg">
          <span class="text-muted dark:text-slate-400">Monday</span>
          <span class="font-bold dark:text-white">8:00 AM – 5:00 PM</span>
          <span class="text-muted dark:text-slate-400">Tuesday</span>
          <span class="font-bold dark:text-white">8:00 AM – 5:00 PM</span>
          <span class="text-muted dark:text-slate-400">Wednesday</span>
          <span class="font-bold dark:text-white">8:00 AM – 5:00 PM</span>
          <span class="text-muted dark:text-slate-400">Thursday</span>
          <span class="font-bold dark:text-white">8:00 AM – 5:00 PM</span>
          <span class="text-muted dark:text-slate-400">Friday</span>
          <span class="font-bold dark:text-white">8:00 AM – 5:00 PM</span>
          <span class="text-muted dark:text-slate-400">Saturday</span>
          <span class="font-bold dark:text-white">Closed</span>
          <span class="text-muted dark:text-slate-400">Sunday</span>
          <span class="font-bold dark:text-white">Closed</span>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction
    title="Ready to Book?"
    subtitle="Schedule your appointment online or give us a call."
    actions={[
      { variant: 'primary', text: 'Book Online', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />
</Layout>
