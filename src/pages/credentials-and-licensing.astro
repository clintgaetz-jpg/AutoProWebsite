---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

import credentialsHero from '~/assets/images/credentials-hero.jpg';

const metadata = {
  title: 'Credentials & Licensing | Sylvan Lake AUTOPRO',
  description: 'Red Seal journeyman technicians, licensed inspection facility, NAPA AUTOPRO member since 2006. Fully insured and trained. Sylvan Lake auto repair you can trust.',
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "AutoRepair",
  "name": "Sylvan Lake AUTOPRO",
  "telephone": "+1-403-887-0440",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1A Industrial Dr",
    "addressLocality": "Sylvan Lake",
    "addressRegion": "AB",
    "postalCode": "T4S 1P4",
    "addressCountry": "CA"
  },
  "priceRange": "$$",
  "openingHours": "Mo-Fr 08:00-17:00",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "290"
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://sylvanlakeautopro.com/" },
    { "@type": "ListItem", "position": 2, "name": "Credentials & Licensing" }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Are your technicians certified?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Our technicians are Red Seal certified journeymen — the highest standard of trade certification in Canada. Red Seal certification means they've completed a recognized apprenticeship program and passed a national exam. It's not a weekend course. It's years of training and thousands of hours of hands-on experience."
      }
    },
    {
      "@type": "Question",
      "name": "Can you do out-of-province inspections?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. We're a licensed Alberta inspection facility. We can perform out-of-province inspections for vehicles being registered in Alberta, as well as commercial vehicle inspections (CVIP). If your vehicle needs an inspection, give us a call to book."
      }
    },
    {
      "@type": "Question",
      "name": "What's the difference between NAPA AUTOPRO and other shops?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "NAPA AUTOPRO is a network of independent shops that meet NAPA's standards for equipment, training, and customer service. As a member, we have access to nationwide warranty coverage (24 months / 40,000 km honoured across North America), technical support, and ongoing training. We're still independently owned and operated — we just have the backing of a national network."
      }
    },
    {
      "@type": "Question",
      "name": "Do you carry liability insurance?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. We carry comprehensive business insurance that is regularly reviewed to ensure sufficient coverage for our operations, serving both retail customers and commercial fleets."
      }
    }
  ]
};
---

<Layout metadata={metadata}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    tagline="About Us"
    title="Credentials & Licensing"
    subtitle="The qualifications behind the work."
    image={{
      src: credentialsHero,
      alt: 'Red Seal certificates and automotive licensing documents',
    }}
    actions={[
      { variant: 'primary', text: 'Book Service', href: 'https://sylvanlakeautopro.autotext.me/Admin/kioskv2/index.php?id=WTNHaFJhb1g1dk9YV3g1YmpkUEx3QT09&kiosk=1', target: '_blank' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />

  <!-- Red Seal Section -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-3xl mx-auto px-4 md:px-6">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="tabler:certificate" class="w-8 h-8 text-red-600 dark:text-red-400" />
        </div>
        <div>
          <p class="text-sm font-bold tracking-wide uppercase text-primary dark:text-blue-200 mb-2">Trade Certification</p>
          <h2 class="text-2xl md:text-3xl font-bold font-heading dark:text-white mb-4">Red Seal Journeyman Technicians</h2>
          <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-4">
            <p>The Red Seal is the gold standard of trade certification in Canada. It's a national credential that means our technicians have completed a recognized apprenticeship program and passed a standardized exam.</p>
            <p>This isn't a weekend course or an online certificate. It's <strong class="text-gray-900 dark:text-white">years of training and thousands of hours of hands-on experience</strong> — verified by a national standard.</p>
            <p>When you bring your vehicle here, it's worked on by qualified tradespeople who've earned the right to call themselves journeymen.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Licensed Inspection Facility -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-3xl mx-auto px-4 md:px-6">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-16 h-16 bg-primary/10 dark:bg-blue-900/30 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="tabler:clipboard-check" class="w-8 h-8 text-primary dark:text-blue-400" />
        </div>
        <div>
          <p class="text-sm font-bold tracking-wide uppercase text-primary dark:text-blue-200 mb-2">Government Licensed</p>
          <h2 class="text-2xl md:text-3xl font-bold font-heading dark:text-white mb-4">Licensed Inspection Facility</h2>
          <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-4">
            <p>We're licensed by the Province of Alberta to perform vehicle inspections. This includes:</p>
          </div>
          <ul class="mt-4 space-y-2 text-base md:text-lg text-muted dark:text-slate-400">
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Out-of-Province Inspections</strong> — Required when registering a vehicle from another province in Alberta</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Commercial Vehicle Inspections (CVIP)</strong> — Required for commercial vehicles to operate legally</span>
            </li>
          </ul>
          <p class="text-base md:text-lg text-muted dark:text-slate-400 mt-4">Being a licensed inspection facility means we meet the province's standards for equipment, training, and procedures. It's not automatic — it requires ongoing compliance.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- NAPA AUTOPRO Section -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-3xl mx-auto px-4 md:px-6">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-16 h-16 bg-[#0A0094]/10 dark:bg-blue-900/30 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="tabler:building-store" class="w-8 h-8 text-[#0A0094] dark:text-blue-400" />
        </div>
        <div>
          <p class="text-sm font-bold tracking-wide uppercase text-primary dark:text-blue-200 mb-2">Network Membership</p>
          <h2 class="text-2xl md:text-3xl font-bold font-heading dark:text-white mb-4">NAPA AUTOPRO Since 2006</h2>
          <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-4">
            <p>We've been a NAPA AUTOPRO member since 2006. That's not just a sign on the building — it comes with real benefits for our customers:</p>
          </div>
          <ul class="mt-4 space-y-2 text-base md:text-lg text-muted dark:text-slate-400">
            <li class="flex items-start gap-3">
              <Icon name="tabler:shield-check" class="w-5 h-5 text-primary dark:text-blue-400 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Nationwide Warranty</strong> — 24 months / 40,000 km, honoured at 17,000+ locations across North America</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:tools" class="w-5 h-5 text-primary dark:text-blue-400 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Technical Support</strong> — Access to NAPA's technical hotline and diagnostic resources</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:school" class="w-5 h-5 text-primary dark:text-blue-400 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Ongoing Training</strong> — Regular training programs to keep our technicians current</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:package" class="w-5 h-5 text-primary dark:text-blue-400 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Quality Parts</strong> — Priority access to NAPA's parts network</span>
            </li>
          </ul>
          <p class="text-base md:text-lg text-muted dark:text-slate-400 mt-4">We're still independently owned and operated — the Chicken family has run this shop since 2006. NAPA AUTOPRO gives us the backing of a national network while keeping decisions local.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Awards Section -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-3xl mx-auto px-4 md:px-6">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-16 h-16 bg-yellow-100 dark:bg-yellow-900/30 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="tabler:award" class="w-8 h-8 text-yellow-600 dark:text-yellow-400" />
        </div>
        <div>
          <p class="text-sm font-bold tracking-wide uppercase text-primary dark:text-blue-200 mb-2">Recognition</p>
          <h2 class="text-2xl md:text-3xl font-bold font-heading dark:text-white mb-4">Awards & Recognition</h2>
          <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-4">
            <p>We don't chase awards, but we're proud when customers and peers recognize our work:</p>
          </div>
          <ul class="mt-4 space-y-2 text-base md:text-lg text-muted dark:text-slate-400">
            <li class="flex items-start gap-3">
              <Icon name="tabler:star" class="w-5 h-5 text-yellow-500 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">4.9 Star Rating</strong> — 290+ Google reviews from real customers</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:trophy" class="w-5 h-5 text-yellow-500 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Consumer Choice Award</strong> — Voted best auto repair in Sylvan Lake</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:heart" class="w-5 h-5 text-yellow-500 mt-1 flex-shrink-0" />
              <span><strong class="text-gray-900 dark:text-white">Community Support</strong> — Active sponsors of local hockey, baseball, and community events</span>
            </li>
          </ul>
          <p class="text-base md:text-lg text-muted dark:text-slate-400 mt-4">The real recognition that matters is repeat customers and referrals. After 19 years, many of our customers have been with us since the beginning.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Training Section -->
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-3xl mx-auto px-4 md:px-6">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="tabler:school" class="w-8 h-8 text-green-600 dark:text-green-400" />
        </div>
        <div>
          <p class="text-sm font-bold tracking-wide uppercase text-primary dark:text-blue-200 mb-2">Continuous Learning</p>
          <h2 class="text-2xl md:text-3xl font-bold font-heading dark:text-white mb-4">Ongoing Training</h2>
          <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-4">
            <p>Cars change every year. What worked on a 2010 doesn't apply to a 2024. If a technician isn't learning, they're falling behind.</p>
            <p>Our team participates in regular training through:</p>
          </div>
          <ul class="mt-4 space-y-2 text-base md:text-lg text-muted dark:text-slate-400">
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span>NAPA AUTOPRO technical training programs</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span>Manufacturer-specific courses (Ford, GM, Chrysler, Asian makes)</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span>Diagnostic equipment training</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span>Hybrid and EV systems training</span>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="tabler:check" class="w-5 h-5 text-green-600 mt-1 flex-shrink-0" />
              <span>BG Products service certifications</span>
            </li>
          </ul>
          <p class="text-base md:text-lg text-muted dark:text-slate-400 mt-4">Training isn't optional. It's how we stay capable of working on whatever comes through the door.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Insurance Section -->
  <section class="py-12 md:py-16 lg:py-20">
    <div class="max-w-3xl mx-auto px-4 md:px-6">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-16 h-16 bg-primary/10 dark:bg-blue-900/30 rounded-full flex items-center justify-center flex-shrink-0">
          <Icon name="tabler:shield" class="w-8 h-8 text-primary dark:text-blue-400" />
        </div>
        <div>
          <p class="text-sm font-bold tracking-wide uppercase text-primary dark:text-blue-200 mb-2">Business Insurance</p>
          <h2 class="text-2xl md:text-3xl font-bold font-heading dark:text-white mb-4">Insurance & Liability Coverage</h2>
          <div class="text-base md:text-lg text-muted dark:text-slate-400 space-y-4">
            <p>We carry comprehensive business insurance that is regularly reviewed to ensure our coverage is sufficient for our operations — serving both retail customers and commercial fleets.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about our credentials"
    columns={1}
    items={[
      {
        title: 'Are your technicians certified?',
        description: "Yes. Our technicians are Red Seal certified journeymen — the highest standard of trade certification in Canada. Red Seal certification means they've completed a recognized apprenticeship program and passed a national exam. It's not a weekend course. It's years of training and thousands of hours of hands-on experience.",
      },
      {
        title: 'Can you do out-of-province inspections?',
        description: "Yes. We're a licensed Alberta inspection facility. We can perform out-of-province inspections for vehicles being registered in Alberta, as well as commercial vehicle inspections (CVIP). If your vehicle needs an inspection, give us a call to book.",
      },
      {
        title: "What's the difference between NAPA AUTOPRO and other shops?",
        description: "NAPA AUTOPRO is a network of independent shops that meet NAPA's standards for equipment, training, and customer service. As a member, we have access to nationwide warranty coverage (24 months / 40,000 km honoured across North America), technical support, and ongoing training. We're still independently owned and operated — we just have the backing of a national network.",
      },
      {
        title: 'Do you carry liability insurance?',
        description: "Yes. We carry comprehensive business insurance that is regularly reviewed to ensure sufficient coverage for our operations, serving both retail customers and commercial fleets.",
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    title="Questions About Our Qualifications?"
    subtitle="We're happy to discuss our credentials, certifications, or anything else. Transparency is how we operate."
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact' },
      { variant: 'secondary', text: 'Call (403) 887-0440', href: 'tel:+14038870440', class: 'md:hidden' },
      { variant: 'secondary', text: 'Get Directions', href: 'https://www.google.com/maps/dir/?api=1&destination=NAPA+AUTOPRO+-+Sylvan+Lake+AUTOPRO+Inc&destination_place_id=ChIJM5AeqqSydVMRS6-I0MZs35U', class: 'hidden md:inline-flex' },
    ]}
  />
</Layout>
