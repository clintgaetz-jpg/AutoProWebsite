---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import { Icon } from 'astro-icon/components';
import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),
  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section class="relative not-prose min-h-[75vh] flex items-center" {...id ? { id } : {}}>
  <!-- Background gradient -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? (
        <Fragment set:html={bg} />
      ) : (
        <div class="absolute inset-0 bg-gradient-to-b from-[#0A0094] via-[#0A0094] to-[#050036]"></div>
      )}
    </slot>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 w-full">
    <div class="pt-2 pb-12 md:pt-10 md:pb-20">
      <div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
        {
          tagline && (
            <p
              class="text-base text-[#FFC836] font-bold tracking-wide uppercase mb-4"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tighter tracking-tighter mb-6 font-heading text-white"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-lg md:text-xl text-gray-200 mb-8"
                set:html={subtitle}
              />
            )
          }
          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
                {Array.isArray(actions) ? (
                  actions.map((action, index) => (
                    <div class="flex w-full sm:w-auto">
                      <Button
                        {...(action || {})}
                        class={`w-full sm:mb-0 ${index === 0 ? 'bg-[#FFC836] text-[#0A0094] border-[#FFC836] hover:bg-[#F6B928] hover:border-[#F6B928] font-bold shadow-lg' : 'border-white text-white hover:bg-white hover:text-[#0A0094]'}`}
                      />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }

          <!-- Trust Signals - Yellow, inside hero (desktop only) -->
          <div class="hidden md:flex justify-center items-stretch mt-14 text-[#FFC836]">
            <div class="relative text-center px-6 lg:px-8 py-4">
              <Icon name="tabler:calendar-check" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 lg:w-40 lg:h-40 text-white/10" />
              <div class="relative z-10">
                <div class="text-3xl lg:text-4xl xl:text-5xl font-bold font-heading whitespace-nowrap">19+</div>
                <div class="text-xs lg:text-sm uppercase tracking-widest mt-1">Years in Business</div>
              </div>
            </div>
            <!-- Divider -->
            <div class="w-px self-stretch bg-gradient-to-b from-transparent via-[#8B8B8B] to-transparent"></div>
            <div class="relative text-center px-6 lg:px-8 py-4">
              <Icon name="tabler:star" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 lg:w-40 lg:h-40 text-white/10" />
              <div class="relative z-10">
                <div class="text-3xl lg:text-4xl xl:text-5xl font-bold font-heading flex items-center justify-center gap-1 whitespace-nowrap">
                  4.9<Icon name="tabler:star-filled" class="w-6 h-6 lg:w-8 lg:h-8 xl:w-9 xl:h-9" />
                </div>
                <div class="text-xs lg:text-sm uppercase tracking-widest mt-1">Google Rating</div>
                <div class="text-[0.625rem] lg:text-xs uppercase tracking-wider opacity-80 mt-0.5">290+ Reviews</div>
              </div>
            </div>
            <!-- Divider -->
            <div class="w-px self-stretch bg-gradient-to-b from-transparent via-[#8B8B8B] to-transparent"></div>
            <div class="relative text-center px-6 lg:px-8 py-4">
              <Icon name="tabler:shield-check" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 lg:w-40 lg:h-40 text-white/10" />
              <div class="relative z-10">
                <div class="text-3xl lg:text-4xl xl:text-5xl font-bold font-heading whitespace-nowrap">40,000 km</div>
                <div class="text-xs lg:text-sm uppercase tracking-widest mt-1">Warranty Coverage</div>
                <div class="text-[0.625rem] lg:text-xs uppercase tracking-wider opacity-80 mt-0.5">2 Year Warranty</div>
              </div>
            </div>
            <!-- Divider -->
            <div class="w-px self-stretch bg-gradient-to-b from-transparent via-[#8B8B8B] to-transparent"></div>
            <div class="relative text-center px-6 lg:px-8 py-4">
              <Icon name="tabler:award" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 lg:w-40 lg:h-40 text-white/10" />
              <div class="relative z-10">
                <div class="text-3xl lg:text-4xl xl:text-5xl font-bold font-heading whitespace-nowrap">Multi-Year</div>
                <div class="text-xs lg:text-sm uppercase tracking-widest mt-1">JD Power Awards</div>
              </div>
            </div>
          </div>

        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div>
        {
          image && (
            <div class="relative m-auto max-w-5xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="mx-auto rounded-md w-full shadow-2xl"
                  widths={[400, 768, 1024, 2040]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                  loading="eager"
                  width={1024}
                  height={576}
                  {...image}
                />
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>