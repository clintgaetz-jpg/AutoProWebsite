---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky },
    'top-0 z-40 flex-none mx-auto w-full',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <!-- TOP BAR - Thin Yellow -->
  <div class="bg-[#FFC836] h-2"></div>

  <!-- MAIN NAV BAR - Dark Blue Gradient -->
  <div class="bg-[#0A0094]">
    <div class="max-w-7xl mx-auto px-3 md:px-6">
      <div class="flex items-center justify-between py-3">
        <!-- Logo -->
        <a class="flex items-center" href={getHomePermalink()}>
          <Logo />
        </a>

        <!-- Mobile Menu Toggle -->
        <div class="flex items-center md:hidden">
          <ToggleMenu />
        </div>

        <!-- Desktop Navigation -->
        <nav
          class="items-center hidden md:flex"
          aria-label="Main navigation"
        >
          <ul class="flex items-center text-[0.9375rem] tracking-[0.01rem] font-medium">
            {
              links.map(({ text, href, links: subLinks }) => (
                <li class={subLinks?.length ? 'dropdown relative' : ''}>
                  {subLinks?.length ? (
                    <>
                      <button
                        type="button"
                        class="text-white hover:text-[#FFC836] px-4 py-3 flex items-center whitespace-nowrap transition-colors duration-200"
                      >
                        {text}
                        <Icon name="tabler:chevron-down" class="w-3.5 h-3.5 ml-1" />
                      </button>
                      <ul class="dropdown-menu absolute top-full left-0 mt-0 hidden min-w-[220px] bg-white rounded-b shadow-lg z-50">
                        {subLinks.map(({ text: subText, href: subHref }) => (
                          <li>
                            <a
                              class:list={[
                                'block px-5 py-3 text-gray-700 hover:bg-gray-100 hover:text-[#0A0094] transition-colors',
                                { 'font-semibold text-[#0A0094]': subHref === currentPath },
                              ]}
                              href={subHref}
                            >
                              {subText}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </>
                  ) : (
                    <a
                      class:list={[
                        'text-white hover:text-[#FFC836] px-4 py-3 flex items-center whitespace-nowrap transition-colors duration-200',
                        { 'text-[#FFC836]': href === currentPath },
                      ]}
                      href={href}
                    >
                      {text}
                    </a>
                  )}
                </li>
              ))
            }
          </ul>
        </nav>

        <!-- Right side: Theme toggle + CTA -->
        <div class="hidden md:flex items-center gap-4">
          {showToggleTheme && <ToggleTheme iconClass="w-5 h-5 text-white" />}
          {
            actions?.length ? (
              actions.map((btnProps) => (
                <a
                  href={btnProps.href}
                  class="flex items-center gap-2 bg-[#2952e8] hover:bg-[#3d63ea] text-white px-5 py-2.5 rounded font-semibold text-sm transition-colors"
                >
                  <Icon name="tabler:map-pin" class="w-4 h-4" />
                  {btnProps.text}
                </a>
              ))
            ) : null
          }
        </div>
      </div>
    </div>
  </div>

  <!-- BOTTOM BAR - Thin Dark Grey (desktop only) -->
  <div class="hidden md:block bg-[#4A4A4A] h-0.5"></div>

  <!-- Mobile Navigation Panel -->
  <nav
    class="mobile-nav hidden md:hidden bg-[#0A0094]"
    aria-label="Mobile navigation"
  >
    <ul class="px-4 py-4 space-y-1">
      {
        links.map(({ text, href, links: subLinks }) => (
          <li>
            {subLinks?.length ? (
              <details class="group">
                <summary class="flex items-center justify-between text-white py-3 px-2 cursor-pointer hover:text-[#FFC836]">
                  {text}
                  <Icon name="tabler:chevron-down" class="w-4 h-4 group-open:rotate-180 transition-transform" />
                </summary>
                <ul class="pl-4 pb-2 space-y-1">
                  {subLinks.map(({ text: subText, href: subHref }) => (
                    <li>
                      <a
                        class="block text-white/80 hover:text-[#FFC836] py-2 px-2 transition-colors"
                        href={subHref}
                      >
                        {subText}
                      </a>
                    </li>
                  ))}
                </ul>
              </details>
            ) : (
              <a
                class="block text-white hover:text-[#FFC836] py-3 px-2 transition-colors"
                href={href}
              >
                {text}
              </a>
            )}
          </li>
        ))
      }
    </ul>
    {
      actions?.length ? (
        <div class="px-4 pb-4">
          {actions.map((btnProps) => (
            <a
              href={btnProps.href}
              class="flex items-center justify-center gap-2 bg-[#2952e8] hover:bg-[#3d63ea] text-white px-5 py-3 rounded font-semibold transition-colors w-full"
            >
              <Icon name="tabler:map-pin" class="w-4 h-4" />
              {btnProps.text}
            </a>
          ))}
        </div>
      ) : null
    }
  </nav>
</header>