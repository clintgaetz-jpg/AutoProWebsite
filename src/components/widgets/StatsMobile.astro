---
import { Icon } from 'astro-icon/components';
---

<!-- Mobile-only Trust Signals - 2x2 Yellow Grid with background icons -->
<section class="md:hidden bg-[#0A0094] py-10 px-4">
  <div class="grid grid-cols-2 gap-6 max-w-sm mx-auto text-[#FFC836] text-center">
    <!-- 19+ Years -->
    <div class="relative py-6">
      <Icon name="tabler:calendar-check" class="absolute inset-0 m-auto w-28 h-28 text-white/15" />
      <div class="relative z-10">
        <div class="text-4xl font-bold font-heading">19+</div>
        <div class="text-xs uppercase tracking-widest mt-1">Years in Business</div>
      </div>
    </div>
    
    <!-- Google Rating -->
    <div class="relative py-6">
      <Icon name="tabler:star" class="absolute inset-0 m-auto w-28 h-28 text-white/15" />
      <div class="relative z-10">
        <div class="text-4xl font-bold font-heading flex items-center justify-center gap-1">
          4.9<Icon name="tabler:star-filled" class="w-7 h-7" />
        </div>
        <div class="text-xs uppercase tracking-widest mt-1">Google Rating</div>
        <div class="text-[10px] uppercase tracking-wider opacity-80 mt-0.5">290+ Reviews</div>
      </div>
    </div>
    
    <!-- Warranty -->
    <div class="relative py-6">
      <Icon name="tabler:shield-check" class="absolute inset-0 m-auto w-28 h-28 text-white/15" />
      <div class="relative z-10">
        <div class="text-3xl font-bold font-heading whitespace-nowrap">40,000 km</div>
        <div class="text-xs uppercase tracking-widest mt-1">Warranty Coverage</div>
        <div class="text-[10px] uppercase tracking-wider opacity-80 mt-0.5">2 Year Warranty</div>
      </div>
    </div>
    
    <!-- JD Power -->
    <div class="relative py-6">
      <Icon name="tabler:award" class="absolute inset-0 m-auto w-28 h-28 text-white/15" />
      <div class="relative z-10">
        <div class="text-3xl font-bold font-heading whitespace-nowrap">Multi-Year</div>
        <div class="text-xs uppercase tracking-widest mt-1">JD Power Awards</div>
      </div>
    </div>
  </div>
</section>